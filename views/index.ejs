<!DOCTYPE html>
<html lang="es">
	<!-- Head -->
	<%- include('partials/head') %> 
	<!-- /Head -->
	
<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

    <!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- Ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>

			<% visitedProducts.forEach(product => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detail/<%- product.id %>/<%- product.category %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= product.image %> " alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2><%= (toThousand(calculateDiscount(product.discount, product.price))) %></h2>
								<% if (product.discount != 0) { %>
									<span><%- product.discount %> %OFF</span>							 
								<% } %>
								<p><%- product.name %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>			
			<% }) %>

		</div>
	</div>
	<!-- /Ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>

			<% productsInSale.forEach(product => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detail/<%- product.id %>/<%- product.category %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= product.image %> " alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2><%= (toThousand(calculateDiscount(product.discount, product.price))) %></h2>
								<% if (product.discount != 0) { %>
									<span><%- product.discount %> %OFF</span>							 
								<% } %>
								<p><%- product.name %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>			
			<% }) %>

		</div>
	</div>
	<!-- /Ofertas -->

	<!-- Footer -->
	<%- include('partials/footer')  %>
	<!-- /Footer -->

	<!-- Scripts -->
	<%- include('partials/scripts')  %>
	<!-- /Scripts -->
</body>
</html>